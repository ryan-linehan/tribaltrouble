<project name="tt-classpaths" basedir=".">
	<!-- Provide lib variable to find classpaths -->

	<target name="os-check">
		<echo message="${os.name}" />
		<echo message="${os.arch}" />
	</target>

	<!-- Platform conditions to select for platform.classpath -->
	<condition property="platform-natives" value="windows.classpath">
		<os family="windows" />
	</condition>

	<condition property="platform-natives" value="linux.classpath">
		<os name="linux" />
	</condition>

	<condition property="platform-natives" value="macosx.classpath">
		<os name="Mac OS X" arch="x86_64" />
	</condition>

	<condition property="platform-natives" value="macosx-arm64.classpath">
		<os name="Mac OS X" arch="aarch64" />
	</condition>

	<!-- Platform specific classpaths -->
	<path id="windows.classpath">
		<fileset dir="${lib}">
			<include name="lwjgl-natives-windows.jar" />
			<include name="lwjgl-opengl-natives-windows.jar" />
			<include name="lwjgl-openal-natives-windows.jar" />
			<include name="lwjgl-jawt-natives-windows.jar" />
			<include name="lwjgl-glfw-natives-windows.jar" />
		</fileset>
	</path>

	<path id="linux.classpath">
		<fileset dir="${lib}">
			<include name="lwjgl-natives-linux.jar" />
			<include name="lwjgl-opengl-natives-linux.jar" />
			<include name="lwjgl-openal-natives-linux.jar" />
			<include name="lwjgl-jawt-natives-linux.jar" />
			<include name="lwjgl-glfw-natives-linux.jar" />
		</fileset>
	</path>

	<path id="macosx.classpath">
		<fileset dir="${lib}">
			<include name="lwjgl-natives-macos.jar" />
			<include name="lwjgl-opengl-natives-macos.jar" />
			<include name="lwjgl-openal-natives-macos.jar" />
			<include name="lwjgl-jawt-natives-macos.jar" />
			<include name="lwjgl-glfw-natives-macos.jar" />
		</fileset>
	</path>

	<path id="macosx-arm64.classpath">
		<fileset dir="${lib}">
			<include name="lwjgl-natives-macos-arm64.jar" />
			<include name="lwjgl-opengl-natives-macos-arm64.jar" />
			<include name="lwjgl-openal-natives-macos-arm64.jar" />
			<include name="lwjgl-jawt-natives-macos-arm64.jar" />
			<include name="lwjgl-glfw-natives-macos-arm64.jar" />
		</fileset>
	</path>

	<!-- Classpaths -->
	<path id="platform.classpath">
		<fileset dir="${lib}">
			<include name="jorbis.jar" />
			<include name="jsquish.jar" />
			<include name="commons-pool-1.2.jar" />
			<include name="commons-dbcp-1.2.1.jar" />
			<include name="commons-collections-3.1.jar" />
			<include name="lwjgl.jar" />
			<include name="lwjgl-opengl.jar" />
			<include name="lwjgl-openal.jar" />
			<include name="lwjgl-jawt.jar" />
			<include name="lwjgl-glfw.jar" />
			<include name="png.jar" />
		</fileset>
		<path refid="${platform-natives}" />
		<pathelement path="../common/build/classes" />
	</path>

	<path id="tools.classpath">
		<pathelement path="../tools/build/classes" />
		<pathelement path="../tools/svn/svnkit.jar" />
	</path>

	<!-- Server-only classpath -->
	<path id="server.classpath">
		<fileset dir="${lib}">
			<include name="jorbis.jar" />
			<include name="jsquish.jar" />
			<include name="commons-pool-1.2.jar" />
			<include name="commons-dbcp-1.2.1.jar" />
			<include name="commons-collections-3.1.jar" />
			<include name="lwjgl.jar" />
			<include name="lwjgl-opengl.jar" />
			<include name="lwjgl-openal.jar" />
			<include name="lwjgl-jawt.jar" />
			<include name="lwjgl-glfw.jar" />
			<include name="png.jar" />
			<include name="mysql-connector-j-9.3.0.jar" />
		</fileset>
		<path refid="${platform-natives}" />
		<pathelement path="../common/build/classes" />
	</path>

</project>
